<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo -- Your task manager</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div
      class="main flex flex-col justify-center items-center p-5 gap-10 w-[80%] mx-auto">
      <div
        class="hero w-full flex justify-center items-center gap-10 rounded-2xl border border-[#cfc5a6] p-10">
        <div class="text flex flex-col justify-center gap-2">
          <h3 class="text-4xl font-bold">Todo Done</h3>
          <p class="text-lg">keep it up</p>
        </div>
        <div
          class="graph w-44 h-44 rounded-full red-bg black text-4xl font-extrabold flex text-center justify-center py-16 p-12">
          1 / 3
        </div>
      </div>
      <form
        class="w-full flex items-center justify-center gap-4"
        action="/createtask"
        method="post">
        <input
          class="grey w-[80%] dark-grey rounded-2xl p-3"
          placeholder="write your next task"
          name="content"
          required
          type="text" />
        <input
          class="h-14 w-14 flex items-center justify-center red-bg pb-1 rounded-full text-3xl text-black font-extrabold"
          type="submit"
          value="+" />
      </form>
      <div class="tasks w-full flex flex-col justify-center items-center gap-5">
        <% todos.map((todo)=>{ %>
        <div
          class="task w-full flex justify-center items-center flex-col gap-4">
          <div
            class="content w-full flex items-center justify-between w-[80%] dark-grey rounded-2xl p-5 border border-[#5a5a58]">
            <a
              class="h-8 w-8 rounded-full border border-[#af6856] cursor-pointer <%= todo.iscompleted? 'bg-green-400' : 'bg-transparent' %>"
              href="/done/<%= todo._id %>"></a>

            <h4 class="text-xl justify-self-start font-semibold">
              <%= todo.content %>
            </h4>

            <div class="buttons flex justify-center items-center gap-4">
              <button class="edit-btn">
                <img class="w-8" src="/images/edit.png" alt="edit" />
              </button>
              <a href="/deletetask/<%= todo._id %>">
                <img class="w-8" src="/images/delete.png" alt="delete"
              /></a>
            </div>
          </div>
          <form
            class="edit hidden w-full flex justify-between items-center"
            action="/edittask/<%= todo._id %>"
            method="post">
            <input
              class="grey w-[80%] dark-grey rounded-2xl p-3"
              value="<%=todo.content %>"
              name="editedcontent"
              required
              type="text" />
            <input
              class="save flex items-center justify-center red-bg rounded-md text-black font-semibold py-2 px-4"
              type="submit"
              value="Save" />
          </form>
        </div>
        <%}) %>
      </div>
    </div>
    <script>
      document.querySelectorAll(".task").forEach((task) => {
        const editBtn = task.querySelector(".edit-btn");
        const editForm = task.querySelector(".edit");

        editBtn.addEventListener("click", function (e) {
          e.preventDefault();
          editForm.classList.toggle("hidden");
        });

        const saveBtn = task.querySelector(".save");
        saveBtn.addEventListener("click", function () {
          editForm.classList.add("hidden");
        });
      });
    </script>
  </body>
</html>
